{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug SnapText",
            "program": "${workspaceFolder}/.build/debug/SnapText",
            "args": [],
            "preLaunchTask": "swift-build",
            "terminal": "integrated"
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach to SnapText",
            "program": "${workspaceFolder}/.build/debug/SnapText",
            "pid": "${command:pickProcess}",
            "initCommands": [
                "process handle -p true -s false -n false SIGSTOP SIGTERM SIGINT"
            ]
        }
    ]
}
